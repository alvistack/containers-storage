#!/usr/bin/make -f

SHELL := /bin/bash

override_dh_auto_build:
	set -ex && \
		export CGO_ENABLED=1 && \
		go build \
			-mod vendor -buildmode pie -v \
			-ldflags "-s -w" \
			-tags "netgo osusergo exclude_graphdriver_devicemapper exclude_graphdriver_btrfs containers_image_openpgp seccomp apparmor" \
			-o containers-storage ./cmd/containers-storage

override_dh_auto_install:
	install -Dpm755 -d debian/tmp/usr/bin
	install -Dpm755 -d debian/tmp/usr/share/containers
	install -Dpm755 -t debian/tmp/usr/bin containers-storage
	install -Dpm755 -t debian/tmp/usr/share/containers storage.conf

override_dh_auto_test:

override_dh_auto_clean:

%:
	dh $@
